<MyLayout>: # no need to import stuff in kv!
    name:"mainScreen"
    btcl:btCheckLamp
    AnchorLayout:
        anchor_x:"center"
        anchor_y:"center"
        Button:
            id:btCheckLamp
            text: "X lit lamps"
            #id: "checkLamp"
            background_normal: './graphic/Button/checkLamp.png'
            background_down: './graphic/Button/checkLampcl.png'
            #size: 100, 100 
            size_hint: 0.6 , 0.6 #d√©finit la taille d'un widget comme une fraction de la taille des parents.
            on_release: root.checkLamp()
    AnchorLayout:
        anchor_x:"center"
        anchor_y:"top"
        Button:
            text:"configuration"
            #markup: True
            background_normal: './graphic/Button/btBlue.png'
            background_down: './graphic/Button/btBluecl.png'
           # border: 60,60,60,60
           # size: 100, 100
            size_hint: 0.8, None
            on_release: 
                root.manager.current ="configScreen"
                print("change config screen")

                
